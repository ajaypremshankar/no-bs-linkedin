{
  "manifest_version": 2,
  "name": "No BS LinkedIn",
  "version": "0.0.0",

  "icons": {
    "16": "assets/icons/favicon-16.png",
    "32": "assets/icons/favicon-32.png",
    "48": "assets/icons/favicon-48.png",
    "128": "assets/icons/favicon-128.png"
  },
  "description": "Sample description",
  "homepage_url": "https://github.com/abhijithvijayan/no-bs-linkedin",
  "short_name": "Sample Name",

  "permissions": [
    "activeTab",
    "storage",
    "http://www.linkedin.com/*",
    "https://www.linkedin.com/*"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "__chrome|firefox__author": "ajaypremshankar",
  "__opera__developer": {
    "name": "ajaypremshankar"
  },

  "__firefox__applications": {
    "gecko": {
      "id": "{754FB1AD-CC3B-4856-B6A0-7786F8CA9D17}"
    }
  },

  "__chrome__minimum_chrome_version": "49",
  "__opera__minimum_opera_version": "36",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "No BS LinkedIn",
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },

  "__chrome|opera__options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "__chrome__chrome_style": false
  },

  "background": {
    "scripts": ["js/background.bundle.js"],
    "__chrome|opera__persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://www.linkedin.com/*", "https://www.linkedin.com/*"],
      "js": ["js/contentScript.bundle.js"]
    }
  ]
}
